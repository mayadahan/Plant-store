<%- include('layouts/header.ejs')%>
<title>Welcome to Flourish</title>
<div style="text-align: center">
    <h1 class="mt-3 welcome">Welcome To <span style="color: green">Flourish</span></h1>
    <%const shuffled = result.sort(() => 0.5 - Math.random());%>
    <%var selected = shuffled.slice(0, 3);%>
    <%for(let i = 2; i >= 0; i--){%>
    <div id='div<%-i%>' class="card p-2 m-2" style="width: 18rem; display: inline-block">
        <img src="./uploads/<%-selected[i].image%>" class="card-img-top" alt="..." style="height: 405px;">
        <div class="card-body">
            <h5 class="card-title"><%=selected[i].name%></h5>
            <p class="card-text">$<%=selected[i].price%></p>
            <p class="card-text desc"><%= selected[i].desc %></p>
        </div>
    </div>
    <%}%>
</div>

<%- include('layouts/footer.ejs')%>
